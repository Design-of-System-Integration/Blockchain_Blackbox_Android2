<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <VideoView
        android:id="@+id/vv_video_play"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/vv_video_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_uploader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게시자"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            />
        <TextView
            android:id="@+id/tv_uploader_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김숙명"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            app:layout_constraintTop_toTopOf="@+id/tv_uploader"
            app:layout_constraintStart_toEndOf="@+id/tv_uploader"
            />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일시"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_uploader"
            app:layout_constraintStart_toStartOf="@+id/tv_uploader"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/tv_date_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023/05/26"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_uploader_info"
            app:layout_constraintStart_toStartOf="@+id/tv_uploader_info"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/tv_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보상내역"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            app:layout_constraintStart_toStartOf="@+id/tv_date"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/tv_reward_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="없음"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_info"
            app:layout_constraintStart_toStartOf="@+id/tv_date_info"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="처리결과"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_reward"
            app:layout_constraintStart_toStartOf="@+id/tv_reward"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/tv_result_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="없음"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_reward_info"
            app:layout_constraintStart_toStartOf="@+id/tv_reward_info"
            android:layout_marginTop="30dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>