<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_accident_history_video_thumbnail"
        android:src="@drawable/img"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:background="@drawable/item_round_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_accident_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023-05-27"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="@+id/iv_accident_history_video_thumbnail"
        app:layout_constraintStart_toEndOf="@+id/iv_accident_history_video_thumbnail"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/tv_accident_history_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="잠실역 사고"
        android:textStyle="bold"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_accident_history_date"
        app:layout_constraintStart_toStartOf="@+id/tv_accident_history_date"/>

    <TextView
        android:id="@+id/tv_accident_history_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진행 중"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_accident_history_video_thumbnail"
        app:layout_constraintStart_toStartOf="@+id/tv_accident_history_date"/>

</androidx.constraintlayout.widget.ConstraintLayout>